<script>
  const carousel = document.getElementById("carousel");
if (!carousel) {
    throw new Error('No se encontró ningún elemento con id "carousel"');
}
  
  const slides = carousel.querySelectorAll(".carousel-item");
  // resto de tu código
  
  // Afirmar que slides[0] es un HTMLElement
  const slideWidth = (slides[0] as HTMLElement).offsetWidth;
  
  let currentIndex = 0; // Define currentIndex
  
  function updateCarousel() {
    const translationValue = `translateX(-${currentIndex * slideWidth}px)`;
    
    carousel.querySelector("#carousel-inner").style.transform = translationValue;
  }
  
  function controlCarousel(direction: "prev" | "next") { // Specify type for direction
    if (direction === "prev") {
      currentIndex = (currentIndex - 1 + slides.length) % slides.length;
    } else if (direction === "next") {
      currentIndex = (currentIndex + 1) % slides.length;
    }
    updateCarousel();
  }
  
  

const prevButton = document.getElementById("prevButton");
if (!prevButton) {
    throw new Error('No se encontró ningún elemento con id "prevButton"');
}

const nextButton = document.getElementById("nextButton");
if (!nextButton) {
    throw new Error('No se encontró ningún elemento con id "nextButton"');
}
  
  if (!prevButton || !nextButton) {
      throw new Error('Buttons not found');
  }
  
  prevButton.addEventListener("click", () => controlCarousel("prev")); // Check if element is not null
  nextButton.addEventListener("click", () => controlCarousel("next")); // Check if element is not null
  
  updateCarousel(); // Initialize carousel with the first slide
    
  </script>



<style>
  @keyframes carousel-slide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }


  .carousel {
    width: 100%;
    max-height: 55vh;
    margin: auto;
    overflow: hidden;
    position: relative;
  }

  .carousel-inner {
    display: flex;
    animation: carousel-slide 1s ease-in-out;
    animation-fill-mode: forwards;
  }

  .carousel-item {
    min-width: 100%;
    box-sizing: border-box;
    position: relative;
  }

  img {
    width: 100%;
    height: auto;
  }

  .carousel-control {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 2rem;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
  }

  .carousel-prev {
    left: 10px;
  }

  .carousel-next {
    right: 10px;
  }
</style>

